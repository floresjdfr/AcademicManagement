@model GestionAcademica.Web.ViewModels.StudentVM

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.GroupStudent.Group.Course.Name)</th>
            <th>@Html.DisplayNameFor(model => model.GroupStudent.Group.Cycle.Number)</th>
            <th>@Html.DisplayNameFor(model => model.GroupStudent.Group.Cycle.Year)</th>
            <th>@Html.DisplayNameFor(model => model.GroupStudent.Group.Teacher.Name)</th>
            <th>@Html.DisplayNameFor(model => model.GroupStudent.Group.Number)</th>
            <th>@Html.DisplayNameFor(model => model.GroupStudent.Score)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GroupStudentsList)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Group.Course.Name)</td>
                <td>@Html.DisplayFor(_ => item.Group.Cycle.Number)</td>
                <td>@Html.DisplayFor(_ => item.Group.Cycle.Year)</td>
                <td>@Html.DisplayFor(_ => item.Group.Teacher.Name)</td>
                <td>@Html.DisplayFor(_ => item.Group.Number)</td>
                <td>@Html.DisplayFor(_ => item.Score)</td>
            </tr>
        }
    </tbody>
</table>

<script>
    if (!$.fn.DataTable.isDataTable('.table')) {
        $(".table").DataTable({
            searching: false
        });
    }
    
</script>
