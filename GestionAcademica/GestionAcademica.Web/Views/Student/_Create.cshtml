@model GestionAcademica.Web.ViewModels.StudentVM
<!-- Modal -->
<div class="modal fade" id="addNewStudentModal" tabindex="-1" aria-labelledby="addNewStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Create">
                <div class="modal-header">
                    <h5 class="modal-title">Agregar Nuevo Ciclo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Student.IdStudent" class="control-label"></label>
                        <input asp-for="Student.IdStudent" class="form-control" />
                        <span asp-validation-for="Student.IdStudent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Student.Name" class="control-label"></label>
                        <input asp-for="Student.Name" class="form-control" />
                        <span asp-validation-for="Student.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Student.PhoneNumber" class="control-label"></label>
                        <input asp-for="Student.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Student.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Student.Email" class="control-label"></label>
                        <input asp-for="Student.Email" class="form-control" />
                        <span asp-validation-for="Student.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Student.DateOfBirth" class="control-label"></label>
                        <input asp-for="Student.DateOfBirth" class="form-control" />
                        <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Student.User.Password" class="control-label"></label>
                        <input asp-for="Student.User.Password" class="form-control" />
                        <span asp-validation-for="Student.User.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Student.Career.CareerName" class="control-label"></label>
                        <select class="form-control" asp-for="Student.Career.ID" asp-items="@(new SelectList(Model.CareersList, "ID", "CareerName"))">
                            <option>Seleccione Carrera</option>
                        </select>
                        <span asp-validation-for="Student.Career.CareerName" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Guardar Estudiante</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
