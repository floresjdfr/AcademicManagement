@model GestionAcademica.Web.ViewModels.TeacherVM

@{
    ViewData["Title"] = "Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Cursos</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.WeeklyHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CoursesList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WeeklyHours)
                </td>
                <td>
                    <form asp-action="Groups" method="post" asp-route-courseID="@item.ID">
                        <button type="submit">Ver Grupos</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>