@model GestionAcademica.Web.ViewModels.AcademicOfferVM

<!-- Modal -->
<div class="modal fade" id="deleteGroupModal" tabindex="-1" aria-labelledby="deleteGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="DeleteCourseGroup">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar Grupo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5>¿Esta seguro/a que desea eliminar el siguiente grupo?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.CourseGroup.Group.Number)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.CourseGroup.Group.Number)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.CourseGroup.Group.Schedule)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.CourseGroup.Group.Schedule)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.CourseGroup.Group.Teacher.Name)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.CourseGroup.Group.Teacher.Name)
                        </dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input type="submit" value="Eliminar" class="btn btn-danger" asp-route-id="@Model.CourseGroup.ID" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>