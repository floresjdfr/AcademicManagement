@model GestionAcademica.Web.ViewModels.CareerVM
<!-- Modal -->
<div class="modal fade" id="editCareerModal" tabindex="-1" aria-labelledby="editCareerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCareerModalLabel">Editar Carrera</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Career.Code" class="control-label"></label>
                        <input asp-for="Career.Code" class="form-control" />
                        <span asp-validation-for="Career.Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Career.CareerName" class="control-label"></label>
                        <input asp-for="Career.CareerName" class="form-control" />
                        <span asp-validation-for="Career.CareerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Career.DegreeName" class="control-label"></label>
                        <input asp-for="Career.DegreeName" class="form-control" />
                        <span asp-validation-for="Career.DegreeName" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Career.ID"/>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary" asp-route-id="@Model.Career.ID">Guardar Carrera</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

