@model GestionAcademica.Web.ViewModels.CareerVM
<!-- Modal -->
<div class="modal fade" id="eliminarCareerModal" tabindex="-1" aria-labelledby="eliminarCareerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="eliminarCareerModalLabel">Eliminar Carrera</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4>¿Esta seguro/a que desea eliminar la siguiente carrera?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Career.Code)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Career.Code)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Career.CareerName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Career.CareerName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Career.DegreeName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Career.DegreeName)
                        </dd>
                    </dl>


                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input type="submit" value="Eliminar" class="btn btn-danger" asp-route-id="@Model.Career.ID" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


