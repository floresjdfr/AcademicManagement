@model GestionAcademica.Web.ViewModels.CareerVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carreras</h1>
<p class="text-right">
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Carrera</a>
</p>
<table class="table" id="table-career">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Career.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Career.CareerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Career.DegreeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListCareer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CareerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DegreeName)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#table-career').DataTable();
    })
</script>

